# Root EditorConfig file for SaaS Benchmarks Platform
# Enforces consistent coding style across all editors and IDEs
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# TypeScript and JavaScript files (frontend and backend)
[*.{ts,tsx,js,jsx}]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# HTML and CSS files
[*.{html,css,scss,sass}]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JSON files (including package.json and tsconfig.json)
[*.json]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true

# Markdown files
[*.md]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.sh]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# YAML files (for CI/CD and configuration)
[*.{yml,yaml}]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Binary files (no text formatting)
[*.{png,jpg,jpeg,gif,ico,woff,woff2,ttf,eot}]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset